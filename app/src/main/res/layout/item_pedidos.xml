<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="117dp"
        android:layout_gravity="center"
        android:background="@color/ilfornofondo"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="354dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/ilfornofondo">


            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="316dp"
                android:layout_marginLeft="316dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.012" />

            <ImageView
                android:id="@+id/iv_imagenplato2"
                android:layout_width="134dp"
                android:layout_height="118dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.051"
                tools:srcCompat="@tools:sample/avatars[2]" />

            <TextView
                android:id="@+id/tv_precio2"
                android:layout_width="55dp"
                android:layout_height="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                android:text="@string/precio"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.905"
                app:layout_constraintStart_toEndOf="@+id/iv_imagenplato2"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombreplato2" />

            <TextView
                android:id="@+id/tv_nombreplato2"
                android:layout_width="151dp"
                android:layout_height="36dp"
                android:layout_marginEnd="52dp"
                android:layout_marginRight="52dp"
                android:gravity="center"
                android:text="@string/nombre"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_imagenplato2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="16dp"
                android:text="@string/cantidad"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_cantidad2"
                app:layout_constraintStart_toEndOf="@+id/iv_imagenplato2"
                app:layout_constraintTop_toBottomOf="@+id/tv_precio2"
                app:layout_constraintVertical_bias="0.6" />

            <TextView
                android:id="@+id/tv_cantidad2"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:entries="@array/Cantidad"
                android:text="@string/_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.155"
                app:layout_constraintStart_toEndOf="@+id/tv_nombreplato2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.851" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
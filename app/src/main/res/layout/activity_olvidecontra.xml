<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Include other widget or layout tags here. These are considered
            "child views" or "children" of the linear layout -->

    <TextView
        android:id="@+id/text_olvide_contra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/recuperar_contrase_a"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingrese_correo_electr_nico_de_recuperaci_n"
        android:gravity="center"
        android:textSize="17dp"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/et_recuperar"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:hint="@string/email_de_recuperacion"
        android:inputType="textWebEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/bt_recuperar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <Button
            android:id="@+id/bt_recuperar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="356dp"
            android:gravity="center"
            android:text="@string/recuperar_password"
            style="@style/margin"
            android:background="@color/ilfornobuttom"
            android:layout_margin="25dp"/>

    </LinearLayout>


</LinearLayout>
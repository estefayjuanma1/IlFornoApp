<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="336dp"
        android:layout_height="265dp"
        android:layout_gravity="center"
        android:background="@color/ilfornofondo"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="336dp"
            android:layout_height="265dp"
            android:layout_gravity="center"
            android:background="@color/ilfornofondo">


            <ImageView
                android:id="@+id/iv_imagenplato"
                android:layout_width="132dp"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nombreplato"
                app:layout_constraintVertical_bias="0.125"
                tools:srcCompat="@tools:sample/avatars[2]" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="265dp"
                android:layout_height="53dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/descripcion"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_imagenplato" />

            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="55dp"
                android:layout_height="17dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/precio"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_descripcion" />

            <TextView
                android:id="@+id/tv_nombreplato"
                android:layout_width="126dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/nombre"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
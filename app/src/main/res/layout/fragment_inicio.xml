<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ilfornofondo">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="586dp"
        android:layout_height="334dp"
        android:background="@color/ilfornofondo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inicio2" />

    <Button
        android:id="@+id/bt_menu"
        style="@style/margin"
        android:layout_width="417dp"
        android:layout_height="100dp"
        android:background="@drawable/boton"
        android:text="@string/men"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/bt_restaurantes"
        style="@style/margin"
        android:layout_width="414dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton"
        android:text="@string/restaurantes"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_menu" />

    <Button
        android:id="@+id/bt_cupones"
        style="@style/margin"
        android:layout_width="403dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton"
        android:text="@string/cupones"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_restaurantes" />
</androidx.constraintlayout.widget.ConstraintLayout>